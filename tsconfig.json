{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,     
    "resolveJsonModule": true,          
    "strict": true,                                      
    "skipLibCheck": true                                ,
    "noUncheckedIndexedAccess": true,
    "sourceRoot": "src",
    "sourceMap": true,
    "outDir": "dist",

  },
  "include": ["src"]
}
 